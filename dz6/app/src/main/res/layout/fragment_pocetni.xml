<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PocetniFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tekst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/buttonKockice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonMonopol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst1"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/buttonIks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonIks"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonKockice"
        app:layout_constraintEnd_toStartOf="@+id/buttonKockice"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="284dp"
        android:text="@string/buttonTekst"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonKockice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonKockice" />

</androidx.constraintlayout.widget.ConstraintLayout>