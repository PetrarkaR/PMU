<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X na potezu"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:0:0"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <!-- Game Grid -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell00"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell02"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cell20"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/cell22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="40sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Game"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/resetScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Score"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="8dp"/>

</LinearLayout>